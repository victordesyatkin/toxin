extends ../demo-base/demo-base

include ../../components/header/header
include ../../components/footer/footer
include ../../components/copyright/copyright

block title
    | Headers & Footers
block header
    +header-ui-kit({ full: true, classes: ['headers-and-footers']})
block main
        article.headers-and-footers
            - let data = htmlWebpackPlugin.options.getData()
            section.headers-and-footers__section    
                +header(data.headerNotAuthorised)
            section.headers-and-footers__section.headers-and-footers__section_margin-top-39    
                +header(data.headerAuthorised)
            section.headers-and-footers__section.headers-and-footers__section_margin-top-39    
                +footer(data.footer)
            section.headers-and-footers__section.headers-and-footers__section_margin-top-39.headers-and-footers__copyright 
                +copyright(data.copyright)
block footer
