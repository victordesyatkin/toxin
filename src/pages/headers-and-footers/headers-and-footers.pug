extends ../../templates/demo-base/demo-base

include ../../components/header-ui-kit/header-ui-kit
include ../../components/header/header
include ../../components/footer/footer

block header
  - let className = 'headers-and-footers';
  div(class=`${className}__header`)
    - let { logo } = data;
    +header-ui-kit(logo)
block main
  -
    let className = 'headers-and-footers';
    let classNames = `${className} js-${className}`;
    let { headerNotAuthorized, headerAuthorized, footer1, footer2, copyright } = data;
  section(class=classNames)
    section(
      class=`${className}__header-not-authorized js-${className}__header-not-authorized`
    )
      +header(headerNotAuthorized)
    section(
      class=`${className}__header-authorized js-${className}__header-authorized`
    )
      +header(headerAuthorized)
    section(class=`${className}__footer js-${className}__footer`)
      +footer(footer1)
    section(class=`${className}__footer-small js-${className}__footer-small`)
      +footer(footer2)
block footer
