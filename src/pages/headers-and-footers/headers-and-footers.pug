extends ../demo-base/demo-base

include ../../components/header-ui-kit/header-ui-kit
include ../../components/header/header
include ../../components/footer/footer

block header
  -
    let className = 'headers-and-footers';
    let { logo } = htmlWebpackPlugin.options.getData() || {};
  div(class=`${className}__header`)
    +header-ui-kit(logo)
block main
  -
    let className = 'headers-and-footers';
    let classNames = `${className} js-${className}`;
    let data = htmlWebpackPlugin.options.getData();
    let { headerNotAuthorized, headerAuthorized, footer1, footer2, copyright } = data || {};
  section(class=classNames)
    section(
      class=`${className}__header-not-authorized js-${className}__header-not-authorized ${className}__section`
    )
      +header(headerNotAuthorized)
    section(
      class=`${className}__header-authorized js-${className}__header-authorized ${className}__section`
    )
      +header(headerAuthorized)
    section(
      class=`${className}__footer-first js-${className}__footer-first ${className}__section`
    )
      +footer(footer1)
    section(
      class=`${className}__footer-second js-${className}__footer-second ${className}__section ${className}__copyright`
    )
      +footer(footer2)
block footer
