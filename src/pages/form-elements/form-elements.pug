extends ../../templates/demo-base/demo-base

include ../../components/text-field/text-field
include ../../components/dropdown/dropdown
include ../../components/masked-text-field/masked-text-field
include ../../components/date-dropdown/date-dropdown
include ../../components/filter-date-dropdown/filter-date-dropdown
include ../../components/subscription-text-field/subscription-text-field
include ../../components/expandable-checkbox-list/expandable-checkbox-list
include ../../components/checkbox-buttons/checkbox-buttons
include ../../components/radio-buttons/radio-buttons
include ../../components/toggle-buttons/toggle-buttons
include ../../components/like-buttons/like-buttons
include ../../components/rate-buttons/rate-buttons
include ../../components/range-slider/range-slider
include ../../components/buttons/buttons
include ../../components/button/button
include ../../components/pagination/pagination
include ../../components/rich-checkbox-buttons/rich-checkbox-buttons
include ../../components/bullet-list/bullet-list
include ../../components/info/info
include ../../components/comment/comment
include ../../components/layout-container/layout-container

block main
  -
    let { textField1, textField2, dropdown1, dropdown2, dropdown3, dropdown4,
      dropdown5, dateDropdown, filterDateDropdown, maskedTextField,
      subscriptionTextField, expandableCheckboxList1, expandableCheckboxList2,
      button, buttons, richCheckboxButtons, checkboxButtons, radioButtons,
      toggleButtons, likeButtons, rateButtons, rangeSlider, pagination, bulletList,
      info, comment, container
    } = data;
    let className = 'form-elements';
  section(class=`${className} js-${className}`)
    +layout-container(container)
      div(class=`${className}__wrapper`)
        section(class=`${className}__text-fields`)
          ul(class=`${className}__list-text-field`)
            li(
              class=`${className}__text-field-default js-${className}__text-field-default`
            )
              +masked-text-field(textField1)
            li(
              class=`${className}__text-field-hover-focus js-${className}__text-field-hover-focus`
            )
              +text-field(textField2)
            li(
              class=`${className}__dropdown-guest-empty js-${className}__dropdown-guest-empty`
            )
              +dropdown(dropdown1)
            li(
              class=`${className}__masked-text-field js-${className}__masked-text-field`
            )
              +masked-text-field(maskedTextField)
            li(class=`${className}__date-dropdown js-${className}__date-dropdown`)
              +date-dropdown(dateDropdown)
            li(
              class=`${className}__filter-date-dropdown js-${className}__filter-date-dropdown`
            )
              +filter-date-dropdown(filterDateDropdown)
            li(
              class=`${className}__subscription-text-field js-${className}__subscription-text-field`
            )
              +subscription-text-field(subscriptionTextField)
          ul(class=`${className}__list-checkbox-buttons`)
            li(
              class=`${className}__checkbox-buttons js-${className}__checkbox-buttons`
            )
              +checkbox-buttons(checkboxButtons)
            li(class=`${className}__radio-buttons`)
              +radio-buttons(radioButtons)
            li(class=`${className}__toggle-buttons`)
              +toggle-buttons(toggleButtons)
            li(class=`${className}__like-buttons js-${className}__like-buttons`)
              +like-buttons(likeButtons)
            li(class=`${className}__rate-buttons js-${className}__rate-buttons`)
              +rate-buttons(rateButtons)
          ul(class=`${className}__list-range-sliders`)
            li(class=`${className}__range-slider js-${className}__range-slider`)
              +range-slider(rangeSlider)
            li(class=`${className}__buttons js-${className}__buttons`)
              +buttons(buttons)
            li(class=`${className}__button js-${className}__button`)
              +button(button)
            li(class=`${className}__pagination js-${className}__pagination`)
              +pagination(pagination)
        section(class=`${className}__dropdowns`)
          ul(class=`${className}__list-dropdowns-comfort`)
            li(
              class=`${className}__dropdown-comfort-default js-${className}__dropdown-comfort-default`
            )
              +dropdown(dropdown2)
            li(
              class=`${className}__dropdown-comfort-expanded js-${className}__dropdown-comfort-expanded`
            )
              +dropdown(dropdown3)
          ul(class=`${className}__list-dropdowns-guests-empty-expended`)
            li(
              class=`${className}__dropdown-guests-empty-expended js-${className}__dropdown-guests-empty-expended`
            )
              +dropdown(dropdown4)
          ul(class=`${className}__list-dropdowns-guests-expended`)
            li(
              class=`${className}__dropdown-guests-expended js-${className}__dropdown-guests-expended`
            )
              +dropdown(dropdown5) 
        section(class=`${className}__lists`)
          ul(class=`${className}__list-expandable-checkbox-list`)
            li(
              class=`${className}__expandable-checkbox-list js-${className}__expandable-checkbox-list`
            )
              +expandable-checkbox-list(expandableCheckboxList1)
            li(
              class=`${className}__expandable-checkbox-list-expended js-${className}__expandable-checkbox-list-expended`
            )
              +expandable-checkbox-list(expandableCheckboxList2)
          ul(class=`${className}__list-rich-checkbox-buttons`)
            li(class=`${className}__rich-checkbox-buttons`)
              +rich-checkbox-buttons(richCheckboxButtons)
          ul(class=`${className}__list-bullet-list`)
            li(class=`${className}__bullet-list`) 
              +bullet-list(bulletList)
        section(class=`${className}__comments`)
          ul(class=`${className}__list-info`)
            li(class=`${className}__info`) 
              +info(info)
          ul(class=`${className}__list-comment`)
            li(class=`${className}__comment js-${className}__comment`)
              +comment(comment)
