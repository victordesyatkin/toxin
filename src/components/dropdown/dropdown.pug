include ../dropdown-item/dropdown-item

mixin dropdown(props)
  if props
    -
      let { dropdown = {}, textField } = props;
      let { isOpened, items = [], theme, title } = dropdown;
      let themes = {
          comfort: 'comfort'
      }
      let className = 'dropdown';
      let classNames = `${className} js-${className}`;
      let themeTextField = 'dropdown';
      classNames += isOpened ? ` ${className}_opened` : '';
      classNames += themes[theme] ? ` ${className}_theme_${themes[theme]}` : '';
    div(class=classNames)
      div(class=`dropdown__title-control js-dropdown__title-control`)
        +dropdown-title-control(props)
          div(class=`${className}__main js-${className}__main`) dddddd
