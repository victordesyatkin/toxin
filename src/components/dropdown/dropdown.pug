mixin dropdown(o)
    -
        let { dropdownOptions, ...inputOptions } = o;
        let { expand = false, type, controlVisible } = dropdownOptions;
        let classDropdown = 'dropdown' + (expand ? ' dropdown_expand' : '');
        // - type = 0 - rooms
        // - type = 1 - guests
    div(class=classDropdown, data-type=type)
        +input(inputOptions)
        .dropdown__main
            block main
                -
                    let { items = [] } = o;
                each item in items
                    - 
                        let { title = '', value = 0, name = '' } = item || {};
                        let buttonMinusClass = 'dropdown__button'  + (value === 0 ? ' dropdown__button_fade' : '');
                    .dropdown__item
                        input(
                            name=name,
                            type='hidden',
                            value=value
                            data-title=title
                        )
                        .dropdown__item-title
                            h3=title
                        .dropdown__item-control
                            //- type = 0 - minus 
                            button(
                                type="button"
                                data-type="0"
                                class=buttonMinusClass
                            )="-"
                            .dropdown__item-value=value
                            //- type = 1 - plus
                            button.dropdown__button(
                                type="button"
                                data-type="1"
                            )="+"
                if (items.length && controlVisible)
                    .dropdown__main-control
                        button.dropdown__control-button.dropdown__control-button_clean(
                            type="button",
                            name="clean"
                        )   
                            |Очистить
                        button.dropdown__control-button.dropdown__control-button_apply(
                            type="button",
                            name="apply"
                        )
                            |Применить

