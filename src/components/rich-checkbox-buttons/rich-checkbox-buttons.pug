mixin rich-checkbox-buttons(o = {})
    -
        let
            {label, buttons = []} = o || {};
    .rich-checkbox-buttons
        if (label) 
            .rich-checkbox-buttons__label
                h3=label
        .rich-checkbox-buttons__buttons
            each button in buttons
                .rich-checkbox-buttons__button
                    +checkbox-buttons({buttons: [{...button, classButtonLabel: 'rich-checkbox-buttons__button-label'}]})
                    if (button.info)
                        .rich-checkbox-buttons__info=button.info
