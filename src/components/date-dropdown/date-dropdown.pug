include ../masked-text-field/masked-text-field
include ../calendar/calendar

mixin date-dropdown(o)
    .date-dropdown.js-date-dropdown
        .date-dropdown__section-dropdown.js-date-dropdown__section-dropdown
            - let {fieldStart, fieldEnd, calendar } = o || {};
            +masked-text-field(fieldStart)
            +masked-text-field(fieldEnd)
        .date-dropdown__section-calendar.js-date-dropdown__section-calendar
            +calendar(calendar)