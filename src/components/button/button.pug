mixin button(props = {})
  -
    let
        { content, type, value, name, src, alt, isHovered, isDisabled, size, theme } = props;
        className = 'button';
        classNames = `${className}`;
        themes = {
            1: 1,
            2: 2,
            3: 3,
        };
        sizes = {
            1: 1,
            2: 2,
            3: 3,
        };
    classNames += isHovered ? ` ${className}_hovered` : '';
    classNames += themes[theme] ? ` ${className}_theme_${themes[theme]}` : '';
    classNames += sizes[size] ? ` ${className}_sizes_${sizes[size]}` : '';
    if (sizes[size] && sizes[size] === 3 && src) {
        classNames += ` ${className}_with_image`;
    }
  button(class=classNames, name=name, type=type, value=value, disabled=isDisabled)
    span.button__content= content
    if (view === 3 && src)
      span.button__image
        img(src=src, alt=alt)
