include ../bullet/bullet

mixin bullet-list(props = {})
    -
        let
            { label, items = [], size } = props;
            className = "bullet-list";
            classNames = `${className}`;
    div(
        class=classNames
    )
        if (label)
            .bullet-list__label=label 
        .bullet-list__list
            each item in items
                .bullet-list__item
                    +bullet(item)

