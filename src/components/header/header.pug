include ../logo-link/logo-link
include ../nav/nav
include ../icon/icon
include ../layout-container/layout-container

mixin header(props)
  if props
    -
      let { nav, logo, toggleNavigation = {}, isOpened, container } = props;
      let className = 'header';
      let classNames = `${className} js-${className}`;
      let { ariaLabel, type = "button", name, value, title } = toggleNavigation;
      classNames += isOpened ? ` ${className}_opened` : '';
    div(class=classNames)
      +layout-container(container)
        div(class=`${className}__wrapper`)
          div(class=`${className}__logo`)
            +logo-link(logo)
          div(class=`${className}__toggle-navigation`)
            button(
              name=name,
              value=value,
              type=type,
              class=`${className}__toggle-navigation-button js-${className}__toggle-navigation-button`,
              aria-label=ariaLabel,
              title=title
            )
              +icon('icon-bars')
          div(class=`${className}__nav js-${className}__nav`)
            +nav(nav)
