mixin checkbox-button(props = {})
    -   
        let
            { name, src, tabindex, isRequired, isDisabled, isChecked, label, bold, defaultSrc } = props;
            className = 'checkbox-button';
            classNames = className;
            id = name ? `checkbox-button-${name}`: '';
        src = src || defaultSrc;
        classNames += bold ? ` ${className}_bold` : '';
    label(
        for=id
        class=classNames
    )
        input.checkbox-button__input(
            type="checkbox"
            name=name
            tabindex=tabindex
            required=isRequired
            disabled=isDisabled
            checked=isChecked
            id = id
        )
        span.checkbox-button__check-mark
            if (src)
                img(src=src, alt=name)
        span.checkbox-button__label=label

                    
                
                    


