mixin calendar(o)
    .calendar.js-calendar(data-options=o)
        - 
            let {isOpen, classNames, forceVisible, buttonCleanText, buttonApplyText } = o || {};
            classes = `calendar__main js-calendar__main${isOpen ? ' calendar__main_opened' : ' calendar__main_hidden'}${classNames && classNames.length ? ` ${classNames.join(' ')}` : ''}`;
        div(class = classes)
            input(type="hidden", date-isCalendar="1")
            .calendar__control
                button.calendar__button.calendar__button_clean.js-calendar__button_clean(type="button", data-type=0)
                    | #{buttonCleanText}
                button.calendar__button.calendar__button_apply.js-calendar__button_apply(type="button", data-type=1)
                    | #{buttonApplyText}