mixin calendar(props = {})
    .calendar.js-calendar(data-options=props)
        - 
            let
                { isOpen, forceVisible, buttonCleanText, buttonApplyText, withoutBorder } = props;
                className = 'calendar'; 
                classes = `${className}__main js-${className}__main`;
            classes += isOpen ? ` ${className}__main_opened` : ` ${className}__main_hidden`;
            classes += withoutBorder ? ' ${className}__main_with-out-border' : '';
        div(class = classes)
            input(type="hidden", date-isCalendar="1")
            .calendar__control
                button.calendar__button.calendar__button_clean.js-calendar__button_clean(type="button", data-type=0)
                    | #{buttonCleanText}
                button.calendar__button.calendar__button_apply.js-calendar__button_apply(type="button", data-type=1)
                    | #{buttonApplyText}