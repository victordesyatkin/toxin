mixin dropdown-item(props = {})
  -
    let { title, value, name } = props || {};
    let className = 'dropdown-input';
    let classNames = `${className} js-${className}`;
    let buttonClassName = `${className}__button`;
    let buttonClassNames = `${buttonClassName} js-${buttonClassName}`;
    let buttonMinusClassNames = `${buttonClassNames}`;
    buttonMinusClasses += value === 0 ? ` ${buttonClass}_fade` : '';
  div(class=classNames)
    input(
      name=name,
      type="hidden",
      value=value,
      class=`${className}__input js-${className}__input`
    )
    div(class=`${className}__title`)= title
    div(class=`${className}__control`)
      button(type="button", data-type="0", class=buttonMinusClassNames)= buttonDecreaseText
      span(class=`${className}__value js-${className}__value`)= value
      button(type="button", data-type="1", class=`${buttonClassNames}`)= buttonIncreaseText
