include ../date-dropdown/date-dropdown
include ../dropdown/dropdown
include ../buttons/buttons

mixin picker (props = {})
    .picker
        - let {label = '', dateDropdown = {}, dropdown = {}, buttons = []} = props;
        if (label)
            .picker__label= label
        .picker__date-dropdown
            +date-dropdown(dateDropdown)
        .picker__dropdown
            +dropdown(dropdown)
        .picker__buttons
            +buttons({buttons})