block variables
include ../../components/layout/layout
include ../../components/header/header
include ../../components/footer/footer

- let data = htmlWebpackPlugin.options.getData() || {};
doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    block meta
      - let { meta = [] } = data;
      each item in meta
        - let { name, content } = item || {};
        meta(name=name, content=content)
    block links
      - let { links = [] } = data;
      each link in links
        - let { rel, href, sizes, type } = link || {};
        link(rel=rel, href=href, sizes=sizes, type=type) 
    title
      block title
        - let { title } = data;
        | #{title}
  - let { slug = '' } = data;
  body(data-slug=slug)
    +layout
      +layout__header
        block header
          - let { headerNotAuthorized } = data;
          +header(headerNotAuthorized)
      +layout__main
        +layout__container({basis: 1440, align: 'center'})
          block main
      +layout__footer
        +layout__container({basis: 1440, align: 'center'})
          block footer
            - let { footer } = data;
            +footer(footer)
